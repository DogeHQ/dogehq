{
	"compilerOptions": {
		"lib": ["DOM", "ES6"],
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "es6",
		"sourceMap": true,
		"inlineSources": true,
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		],
		"resolveJsonModule": true,
		"declarationMap": true,
		"skipLibCheck": true
	}
}
